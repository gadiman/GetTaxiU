<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <fragment
                android:id="@+id/place_autocomplete_fragment1"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_column="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/Enter_destination"
                android:textColorHighlight="@color/black"
                android:drawableRight="@drawable/ic_location"
                android:textColorHint="@color/black"
                />


            <ImageButton
                android:id="@+id/initialLocationPickPlace"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pick_location"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/place_autocomplete_fragment2"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/Enter_destination"
                android:textColorHighlight="@color/black"
                android:drawableRight="@drawable/ic_location"
                android:textColorHint="@color/black"
                />



            <ImageButton
                android:id="@+id/destinationPickPlase"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pick_location"


                />
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/NameTextLabel"
            android:text="@string/name"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="wrap_content" />

        <EditText
            android:id="@+id/NameTextInput"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:drawableRight="@drawable/ic_name"
            android:textSize="10dp"
            android:background="@drawable/layout_edit_textr_rounded"
            android:layout_marginBottom="10dp"
            android:hint="@string/Enter_name"
           />

    <TextView
        android:id="@+id/PhoneText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/phone"
        android:layout_gravity="center"
        />


    <EditText
        android:id="@+id/PhoneTextInput"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/layout_edit_textr_rounded"
        android:drawableRight="@drawable/ic_phone"
        android:hint="@string/Enter_phone"
        android:inputType="phone"
        android:textAlignment="center"

        android:textSize="10dp" />



    <TextView
            android:id="@+id/EmailTextLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Email"
            />

        <EditText
            android:id="@+id/EmailTextInput"
            android:layout_width="250dp"
            android:textSize="10dp"
            android:drawableRight="@drawable/ic_email"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:hint="@string/Enter_email"
            android:background="@drawable/layout_edit_textr_rounded"
            android:layout_marginBottom="10dp"

            />

    <TextView
        android:id="@+id/LeavingTimeTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Leaving_time" />



        <EditText
            android:id="@+id/LeavingTimeTextInput"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/layout_edit_textr_rounded"
            android:textSize="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/Enter_leaving_time"
            android:textAlignment="center"
            android:drawableRight="@drawable/ic_time"
/>







    <Button
    android:id="@+id/SubmitButton"
    android:layout_marginTop="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:textColor="@color/yellow_"
        android:background="@drawable/layout_bg_color_edit_text_rounded"
    android:layout_gravity="center"
    android:text="@string/Button_Submit"/>





</LinearLayout>
